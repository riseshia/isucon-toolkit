#!/usr/bin/env ruby

require "yaml"
require "fileutils"

config = YAML.load_file("config.yml", symbolize_names: true)

servers = config.fetch(:servers)
user = config.fetch(:ssh).fetch(:user)
identity_file = config.fetch(:ssh).fetch(:identity_file)
sync_paths_map = config.fetch(:sync_paths)

# execute rsync command
servers.each do |server_host|
  sync_paths_map.each do |target|
    sync_from = target[:local]
    sync_to = target[:remote]
    require_root = target[:root] ? "--rsync-path='sudo rsync'" : ""

    puts "-- Sync #{sync_from} to #{sync_to}"
    sync_to_dir = sync_to.to_s.split("/")[..-2].join("/")

    system("rsync -avz #{require_root} -e 'ssh -i #{identity_file}' #{sync_from} #{user}@#{server_host}:#{sync_to_dir}")
  end
end
